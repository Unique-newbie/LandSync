# LandSync Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=LandSync
APP_VERSION=1.0.0
DEBUG=true
API_PREFIX=/api/v1

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL with PostGIS
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=LandSync
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here

# Full database URLs (auto-constructed if not set)
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/LandSync
# DATABASE_SYNC_URL=postgresql://postgres:password@localhost:5432/LandSync

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# FILE UPLOAD
# =============================================================================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50

# Allowed extensions
ALLOWED_SPATIAL_EXTENSIONS=.shp,.gpkg,.geojson,.json,.zip
ALLOWED_TEXT_EXTENSIONS=.csv,.xlsx,.xls

# =============================================================================
# GIS CONFIGURATION
# =============================================================================
DEFAULT_SRID=4326
AREA_TOLERANCE_PERCENT=5.0

# =============================================================================
# REDIS (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# GOVERNMENT INTEGRATION
# =============================================================================
# Set to true for sandbox/mock mode
GOV_SANDBOX_MODE=true

# Aadhaar eKYC (UIDAI)
AADHAAR_API_URL=https://sandbox.uidai.gov.in/ekyc
AADHAAR_API_KEY=

# DigiLocker
DIGILOCKER_API_URL=https://sandbox.digilocker.gov.in
DIGILOCKER_CLIENT_ID=
DIGILOCKER_CLIENT_SECRET=

# Bhulekh (State Land Records - varies by state)
BHULEKH_API_URL=https://bhulekh.rajasthan.gov.in
BHULEKH_API_KEY=

# eSign
ESIGN_API_URL=https://sandbox.esign.gov.in
ESIGN_API_KEY=
